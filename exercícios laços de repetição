#include <stdio.h>

int main() {
    int linhas;
    
    printf("Insira um valor inteiro e positivo para o número de linhas do triângulo: ");
    scanf("%d", &linhas);
    for(int h=0; h!=1; h++){
     if(linhas > 0) {
        
        for(int i=0; i<linhas; i++) {
          for(int j=0; j<=i; j++) {
              printf("*");
          }
         printf("\n");
        }

        } else {
            printf("Insira um valor válido: ");
            scanf("%d", &linhas);
            h--;
        }
    
    }
    return 0;
}
